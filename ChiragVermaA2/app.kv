# Create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'
    BoxLayout: # left panel
        size_hint_x: 0.3
        orientation: 'vertical'
        Label:
            text: "Sort by:"
        Label:
            text: "1"
        Label:
            text: "Add New Place..."
        Label:
            text: "Name:"
        TextInput:
            id: name_input
            multiline: False
        Label:
            text: "Country:"
        TextInput:
            id: country_input
            multiline: False
        Label:
            text: "Priority:"
        TextInput:
            id: priority_input
            multiline: False
        Button:
            text: "Add Place"
        Button:
            text: "Clear"
            on_press: app.clear_fields()
    BoxLayout: # right panel
        orientation: 'vertical'
        size_hint_x: 0.7
        Label:
            size_hint_y:0.10
            text: 'Place to visit: 2'
        BoxLayout:
            id: entries_box
            orientation: 'vertical'
        Label:
            size_hint_y:0.10
            text: app.bottom_status_text
